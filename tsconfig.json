{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["."],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
